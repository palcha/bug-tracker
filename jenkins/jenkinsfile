pipeline {
    agent any

    stages {
        stage('unit test parallel'){
            parallel {

           
        stage('Unit test - backend') {
            agent{
                docker{
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            steps {
               dir('bugtracker-backend'){
                sh 'GOCACHE=/tmp/go-build GOMODCACHE=/tmp/go-mod go test -v -coverprofile=coverage.out ./...'
               }
            }
        }
        stage('Unit test - frontend') {
            agent{
                docker{
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            steps {
               dir('bugtracker-frontend'){
                sh '''
                   npm ci
                   npm test
                '''
                
               }
            }
        }
         }
        }
    }
}